pipeline { 
    agent any
    environment {
        Docker_Credential = credentials('roopesh81022')
    }
     stages {
        stage('checkout') {
            steps {
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Roopesh1802/jenkins']])
                
            }


        }
        stage('Build Docker Image') {
            steps { 
                sh 'docker build -t image .'
                }
            }
        stage('login to dockerhub'){
            
            sh 'echo $DOCKERHUB_CREDENTIALS_PSW | sudo docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            
        }

        stage('push image'){
            steps{
                sh 'docker push image '
            }
        }
        }
         post { 
            success { 
                echo "Build is successfull" 
            } 
            failure { 
                echo "Build failed" 
            }
        }
    }
