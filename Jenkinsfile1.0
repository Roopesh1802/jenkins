pipeline { 
    agent any
    environment {
        DOCKERHUB_CREDENTIALS = credentials('docker_id')
    }
     stages {
        stage('Build Docker Image') {
            steps { 
                sh 'docker build -t newimage/alpine:latest .'
                }
            }
        stage('login to dockerhub'){
            steps {
            sh 'echo docker login'
            }
        }

        stage('push image'){
            steps {
                sh 'docker push roopesh81022/newimage/alpine:latest'
            }
        }
    }
         post { 
            success { 
                echo "Build is successfull" 
            } 
            failure { 
                echo "Build failed" 
            }
        }
    }
