pipeline { 
    agent any
    environment {
        Docker_Credentials = credentials('docker-hub')
    }
     stages {
        stage('Build Docker Image') {
            steps { 
                sh 'docker build -t newimage:1.0 .'
                }
            }
        stage('login to dockerhub'){
            steps {
            sh 'echo docker login'
            }
        }

        stage('push image'){
            steps {
                sh 'echo docker push newimage:1.0'
            }
        }
    }
         post { 
            success { 
                echo "Build is successfull" 
            } 
            failure { 
                echo "Build failed" 
            }
        }
    }
